---
import ExpCard from "./ExpCard.astro"
import AgodaIntern from "./contents/AgodaIntern.astro"
import Agoda from "./contents/Agoda.astro"
import KollectiveOne from "./contents/KollectiveOne.astro"
---

<div
  id="hero"
  class="container mx-auto flex flex-col 
  items-center gap-8 rounded-3xl 
  bg-white p-8 my-8"
>
  <p
    class="font-qsan text-3xl font-medium"
  >
    My Journey
  </p>

  <div class="flex flex-col gap-8">
    <ExpCard
      heading="Software Engineer (Contract)"
      company="Kollective one"
      companyLink="https://kollective.one/"
      timeline="May 2020 - Mar 2021"
      Description={KollectiveOne}
      line
      />
      
      <ExpCard
      heading="Software Engineer Internship"
      company="Agoda"
      companyLink="https://agoda.com"
      timeline="April 2021 - Mar 2022"
      Description={AgodaIntern}
      line
      />
      
      <ExpCard
      heading="Software Engineer"
      company="Agoda"
      companyLink="https://agoda.com"
      timeline="April 2022 - July 2023"
      Description={Agoda}

    />
  </div>
</div>
