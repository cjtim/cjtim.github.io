---
export interface Props {
  text: string
  href: string
  class?: string
}
const {
  href,
  class: c,
  text,
} = Astro.props
---

<a
  href={href}
  class:list={[
    "rounded-md",
    "bg-blue-100",
    "px-5",
    "py-3",
    "text-sm",
    "text-black",
    "transition",
    "hover:scale-105",
    "hover:bg-blue-100",
    c,
  ]}
>
  {text}
</a>
